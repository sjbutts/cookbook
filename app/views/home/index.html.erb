<div id="user-widget">
	<% if current_user %>
	Welcome<strong><%= current_user.name %></strong>!<br>
	<%= image_tag(current_user.normalimage) %><br/>
	<%= link_to "Sign Out", signout_path, id: "sign-out" %>
	<% else %>
	<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
	<% end %>
</div>
